<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="500" regeneration="1"/>
		<max-ep value="0"/>
		<armor value="10"/>
		<armor-type value="skin"/>
		<sight value="7"/>
		<time value="35"/>
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="pollen" amount="75" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/worker_bee.bmp"/>
		<image-cancel path="../archer_bee/images/bee_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/bee1.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/bee2.wav"/>
		</command-sounds>
	</parameters>

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="250"/>
			<animation path="models/worker_bee.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="worker_bee" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="260"/>
			<anim-speed value="250"/>
			<animation path="models/worker_bee.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_loaded_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="models/worker_bee_loaded.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>

			<type value="harvest"/>
			<name value="harvest_skill"/>
			<ep-cost value="0"/>
			<speed value="250"/>
			<anim-speed value="200"/>
			<animation path="models/worker_bee_harvest.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>

			<type value="build"/>
			<name value="build_skill"/>
			<ep-cost value="0"/>
			<speed value="175"/>
			<anim-speed value="250"/>
			<animation path="models/worker_bee_build.g3d"/>
			<sound enabled="true" start-time="0.5">
				<sound-file path="sounds/bee1.wav"/>
			</sound>
		</skill>
		<skill>
			<type value="repair"/>
			<name value="repair_skill"/>
			<ep-cost value="0"/>
			<speed value="75"/>
			<anim-speed value="250"/>
			<animation path="models/worker_bee_build.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="350"/>
			<animation path="models/worker_bee.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/bee1.wav"/>
				<sound-file path="sounds/bee2.wav"/>
				<sound-file path="sounds/bee3.wav"/>
				<sound-file path="sounds/bee4.wav"/>
				<sound-file path="sounds/bee5.wav"/>
			</sound>
			<fade value="true"/>
		</skill>

	</skills>


	<commands>

		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../archer_bee/images/bee_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../archer_bee/images/bee_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>

			<type value="repair"/>
			<name value="repair"/>
			<image path="images/bee_repair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="repair_skill"/>
			<repaired-units>
				<unit name="beehive"/>
				<unit name="beehive_barrack"/>
				<unit name="apiary"/>
				<unit name="defence_bee_tower"/>
				<unit name="bee_crossbow"/>
			</repaired-units>
		</command>

		<command>
			<type value="harvest"/>
			<name value="collect_pollen"/>
			<image path="images/bee_harvest.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<harvest-skill value="harvest_skill"/>
			<stop-loaded-skill value="stop_skill"/>
			<move-loaded-skill value="move_loaded_skill"/>
			<harvested-resources>
				<resource name="pollen"/>
			</harvested-resources>
			<max-load value="25"/>
			<hits-per-unit value="1"/>
		</command>

		<command>
			<type value="build"/>
			<name value="build_hives"/>
			<image path="images/bee_build.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>
                                <building name="beehive"/>
				<building name="beehive_barrack"/>
				<building name="apiary"/>
				<building name="defence_bee_tower"/>
			</buildings>
			<start-sound enabled="true">
				<sound-file path="sounds/bee2.wav"/>
			</start-sound>
			<built-sound enabled="true">
				<sound-file path="sounds/bee1.wav"/>
			</built-sound>
		</command>

		<command>
			<type value="build"/>
			<name value="hive_mechanic"/>
			<image path="images/hive_mechanic.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>
                                <building name="bee_crossbow"/>
			</buildings>
			<start-sound enabled="true">
				<sound-file path="sounds/bee2.wav"/>
			</start-sound>
			<built-sound enabled="true">
				<sound-file path="sounds/bee1.wav"/>
			</built-sound>
		</command>

	</commands>
</unit>
