<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="2"/>
		<max-hp value="2500" regeneration="4"/>
		<max-ep value="0"/>
		<armor value="45"/>
		<armor-type value="stone"/>
		<sight value="12"/>
		<time value="140"/>
		<multi-selection value="true"/>
		<uniform-selection value="false"/>
		<cellmap value="false"/>
		<levels>
			<level name="expert" kills="8"/>
			<level name="legendary" kills="20"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
			<unit name="blacksmith"/>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="stone" amount="200"/>
			<resource name="gold" amount="250"/>
			<resource name="food" amount="2"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/atlas.bmp"/>
		<image-cancel path="../../cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="/sounds/atlas_select1.ogg"/>
			<sound path="/sounds/atlas_select2.ogg"/>
			<sound path="/sounds/select1.ogg"/>
			<sound path="/sounds/select2.ogg"/>
			<sound path="/sounds/select3.ogg"/>
			<sound path="/sounds/select4.ogg"/>
			<sound path="/sounds/select5.ogg"/>
		</selection-sounds>
		<command-sounds enabled="true">
		        <sound path="/sounds/ack1.ogg"/>
			<sound path="/sounds/ack2.ogg"/>
			<sound path="/sounds/ack3.ogg"/>
			<sound path="/sounds/ack4.ogg"/>
			<sound path="/sounds/ack5.ogg"/>
		</command-sounds>

	</parameters>


	<!-- *** skills *** -->

	<skills>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="50"/>
			<animation path="models/atlas_idle.g3d"/>
                        <attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0"/>
                        	<target value="faction" include-self="true">
					<unit-type name="atlas" />
				</target>
				<max-hp value="0" regeneration="4"/>
				<max-ep value="0"/>
				<sight value="0"/>
				<attack-strenght value="0" value-percent-multiplier="true"/>
				<attack-range value="0"/>
				<armor value="0"/>
				<move-speed value="0"/>
				<production-speed value="0"/>
			<particles value="false">
			</particles>
                        </attack-boost>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="0"/>
			<speed value="170"/>
			<anim-speed value="70"/>
			<animation path="models/atlas_walk.g3d"/>
			<sound enabled="false"/>

		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>
			<ep-cost value="0"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/atlas_attack.g3d"/>
			<sound enabled="true" start-time="0.65">
				<sound-file path="/sounds/hit1.ogg"/>
				<sound-file path="/sounds/hit2.ogg"/>
			</sound>
			<attack-strength value="350"/>
			<attack-var value="50"/>
			<attack-range value="2"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.45"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true" start-time="0.1">
				<radius value="1"/>
				<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="30"/>
			<animation path="models/atlas_die.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/die1.ogg"/>
				<sound-file path="sounds/die2.ogg"/>
				<sound-file path="sounds/die3.ogg"/>
				<sound-file path="sounds/die4.ogg"/>
			</sound>
                        <fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->

	<commands>

		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../archer/images/tech_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../archer/images/tech_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="images/thor_attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../archer/images/tech_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>
