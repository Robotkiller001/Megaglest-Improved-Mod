<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="3" />
		<height value="2" />
		<ai-build-size value="6"/>
		<max-hp value="8000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="stone"/>
		<sight value="4" />
		<time value="130" />
		<multi-selection value="true"/>
		<uniform-selection value="true"/>
		<cellmap value="true">
			<row value="111"/>
			<row value="111"/>
			<row value="101"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties/>
		<light enabled="false" />
		<rotationAllowed value="true" />
		<unit-requirements>
			<unit name="blacksmith"/>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="wood" amount="50" />
			<resource name="stone" amount="175" />
		</resource-requirements>
		<resources-stored/>
		<image path="images/temple.bmp"/>
		<image-cancel path="../archer/images/tech_cancel.bmp"/>
		<meeting-point value="true" image-path="../barracks/images/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple_build_0.g3d" minHp="0" maxHp="4000"/>
			<animation path="models/temple_build_50.g3d" minHp="4001" maxHp="9000"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/temple.g3d"/>
			<sound enabled="false"/>
			<particles value="true">
				<particle-file path="upgrade_particles.xml" />
				<particle-file path="glow_particles.xml"/>
			</particles>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="models/temple_die.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall3.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall4.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="upgrade"/>
			<name value="open_pandoras_box"/>
			<image path="../../upgrades/pandoras_box/images/shield1.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<upgrade-skill value="upgrade_skill"/>
			<produced-upgrade name="pandoras_box"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_druid" />
			<image path="../druid/images/druid.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="druid"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="calling_god" />
			<image path="../hera/images/hera.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="hera"/>
		</command>

	</commands>
</unit>
